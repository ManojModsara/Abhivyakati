@using QuizGame.Web.Code.LIBS;
@using QuizGame.Web.Models.Others;

@model QuizGame.Dto.UserDto

@{
    ViewBag.Title = "CreateEdit -Admin User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/select2/select2-bootstrap.css", "~/Content/select2/select2.css", "~/Scripts/plugins/alertifyjs/css/alertify.min.css")


<style>
    select.select2 {
        display: block !important;
        visibility: hidden;
        position: absolute;
        margin-top: 4px;
        margin-left: 4px;
        width: 190px;
        height: 20px;
    }
</style>
@using (Html.BeginForm("createedit", "adminuser", FormMethod.Post, new { @action = Url.Action("createedit"), enctype = "multipart/form-data", @id = "model-createedit-adminuser" }))
{

    @Html.HiddenFor(model => model.Uid)
    <section class="content-header">
        <h1>
            @(Model?.Uid == 0 ? "Add User" : "Edit User")
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div id="validation-summary">

                </div>
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">

                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">General Info</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.RoleId, new { @class = "control-label" })
                                        @Html.DropDownListFor(m => m.RoleId, new SelectList(ViewBag.Roles, "id", "RoleName", @Model.RoleId), "Select a Role", new { @class = "form-control select2" })
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.MobileNumber, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.MobileNumber, htmlAttributes: new { @class = "form-control ", @placeholder = "Mobile" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group ">
                                        <label class="control-label">Email</label>
                                        @Html.TextBoxFor(m => m.EmailOffice, htmlAttributes: new { @class = "form-control ", @placeholder = "Email" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control ", @placeholder = "UserName" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control ", @placeholder = "Password" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.IsActive, new { @class = "control-label" })
                                        @Html.CheckBoxFor(m => m.IsActive)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">User Profile Info</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control ", @placeholder = "Owner Name" })<!-- /.input group -->
                                    </div>
                                    
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.State, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.State, htmlAttributes: new { @class = "form-control ", @placeholder = "State" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.City, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.City, htmlAttributes: new { @class = "form-control ", @placeholder = "City" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Pincode, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Pincode, htmlAttributes: new { @class = "form-control ", @placeholder = "Enter Pincode" })<!-- /.input group -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-mar pull-right">
                            <button class="btn btn-block btn-success">Submit <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                        <div class="btn-mar pull-right">
                            <a class="btn btn-block btn-default" href="@Url.Action("index")"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
}

@section scripts{
    @Scripts.Render("~/Scripts/Custom/adminuser/createedit.js", "~/bundles/jqueryval", "~/bundles/select2")
    @Scripts.Render("~/Scripts/plugins/alertifyjs/alertify.min.js")
}



