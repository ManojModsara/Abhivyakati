@using QuizGame.Web.Code.LIBS;
@using QuizGame.Dto;
@using QuizGame.Web.Models.Others;

@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/datatables/css", "~/Content/css/bootstrap-switch.css", "~/Scripts/plugins/alertifyjs/css/alertify.min.css", "~/Content/select2")

<section class="content-header">
    <h1>
        Event List
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @Html.Partial("_Notification")
            <div class="box">
                <div class="box-header">
                    <div class="btn-group">
                        @{
//ActionAllowedDto act = (ActionAllowedDto)ViewBag.actionAllowed;
//if (act.AllowCreate)
//{
                                @Html.ActionLink("Add Event", "createedit", new { }, new { @class = "btn btn-primary" });
                           // }
                        }
                    </div>
                </div>
                <div class="box-body">
                    <div class="table-responsive scroll_tbl">
                        <table id="grid-index" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>EventDate</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>AddedDate</th>
                                    <th>AddedBy</th>
                                    <th>UpdatedDate</th>
                                    <th>UpdatedBy</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_Modal", new Modal { ID = "modal-delete-event", AreaLabeledId = "modal-delete-event-label", Size = QuizGame.Core.Enums.ModalSize.Medium })

@section scripts{
    @Scripts.Render("~/bundles/datatables", "~/bundles/jqueryval", "~/bundles/datepicker", "~/bundles/select2")
    @Scripts.Render("~/Scripts/plugins/alertifyjs/alertify.min.js")
    @Scripts.Render("~/Scripts/Custom/Event/index.js")
}

