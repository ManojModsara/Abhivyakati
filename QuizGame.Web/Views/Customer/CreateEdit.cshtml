@using QuizGame.Web.Code.LIBS;
@using QuizGame.Web.Models.Others;
@model QuizGame.Dto.Customerdto
@{
    ViewBag.Title = "CreateEdit -Admin User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/select2/select2-bootstrap.css", "~/Content/select2/select2.css", "~/Scripts/plugins/alertifyjs/css/alertify.min.css")
<style>
    select.select2 {
        display: block !important;
        visibility: hidden;
        position: absolute;
        margin-top: 4px;
        margin-left: 4px;
        width: 190px;
        height: 20px;
    }
</style>
@using (Html.BeginForm("createedit", "customer", FormMethod.Post, new { @action = Url.Action("createedit"), enctype = "multipart/form-data", @id = "model-createedit-adminuser" }))
{

    @Html.HiddenFor(model => model.ID)
    <section class="content-header">
        <h1>
            @(Model.ID == 0 ? "Add Customer" : "Edit Customer")
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div id="validation-summary">

                </div>
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">

                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">General Info</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control ", @placeholder = "Name" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group ">
                                        @Html.LabelFor(m => m.EMailID, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.EMailID, htmlAttributes: new { @class = "form-control ", @placeholder = "Mobile" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.IsActive, new { @class = "control-label" })
                                        @Html.CheckBoxFor(m => m.IsActive)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="box box-danger">
                                <div class="box-header">
                                    <h3 class="box-title">User Profile Info</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.MobileNo, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.MobileNo, htmlAttributes: new { @class = "form-control ", @placeholder = "Email" })<!-- /.input group -->
                                    </div>
                                    <div class="form-group required">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control ", @placeholder = "Password" })<!-- /.input group -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-mar pull-right">
                            <button class="btn btn-block btn-success">Submit <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                        <div class="btn-mar pull-right">
                            <a class="btn btn-block btn-default" href="@Url.Action("index")"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
}

@section scripts{
    @Scripts.Render("~/Scripts/Custom/Customer/createedit.js", "~/bundles/jqueryval", "~/bundles/select2")
    @Scripts.Render("~/Scripts/plugins/alertifyjs/alertify.min.js")
}