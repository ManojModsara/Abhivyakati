<!-- Hero Section -->
<section class="pt-10 mt-24">
    <div class="mx-auto container px-4 flex flex-col md:flex-row items-center gap-10">
        <div class="flex-1 flex justify-center">
            <img src="@Model.Image" alt="Event Details"
