@model QuizGame.Web.Models.BlogDetailsModel
@{
    //Layout = "~/Views/Shared/_LayoutFront.cshtml";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" href="~/Content/css/blog-detail.css" />
    <link rel="stylesheet" href="~/Content/css/news-blog.css" />
</head>
<body>
    <section class="blog show-more">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-md-8">
                    <div class="blog-card p-3">
                        <div class="tab-content 1" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-post-1" role="tabpanel" aria-labelledby="v-post-1-tab">

                                <div class="row m-0 d-flex align-items-start">
                                    <div class="date">
                                        <p>@Model.Dates</p>
                                    </div>
                                    <div class="col-12 col-md-12"><h5 class="mb-3">@Model.Title</h5> </div>
                                    <div class="col-md-12 col-12">
                                        <div class="blog-img">
                                            <img src="@Model.Image" class="w-100" alt="img">
                                        </div>
                                    </div>
                                </div>
                                <div style="padding:15px;">
                                    @Html.Raw(Model.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--POSTS COLUMN BEGINING-->
                <div class="col-12 col-md-4">
                    <div class="columns posts">
                        <span class="title">Recent Blogs</span>
                        <section class="share-post">

                            @{
                                foreach (var d in ViewBag.Data)
                                {
                                    if (Model.Title == d.Title)
                                    {
                                        <a class="nav-link active" href="@d.Url" role="tab" aria-controls="v-post-1" aria-selected="true"><i class="fa fa-angle-right mr-2"></i> @d.Title</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" href="@d.Url" role="tab" aria-controls="v-post-1" aria-selected="true"><i class="fa fa-angle-right mr-2"></i> @d.Title</a>

                                    }
                                }
                            }

                        </section>
                    </div>
                </div>
                <!--POSTS COLUMN ENDS-->
            </div>
        </div>

    </section>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
</body>
</html>
