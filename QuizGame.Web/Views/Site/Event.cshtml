@using QuizGame.Data;
@model List<Event>
@{
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}

<style>
    .line-clamp-2 {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }
</style>
<section class="relative mt-24 py-10 flex items-center bg-gradient-to-br from-purple-900 via-blue-700 to-indigo-400
 overflow-hidden">
    <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-32 h-32 bg-white/10 rounded-full blur-xl animate-pulse"></div>
        <div class="absolute bottom-20 right-10 w-48 h-48 bg-blue-400/20 rounded-full blur-2xl animate-bounce">
        </div>
        <div class="absolute top-1/2 left-1/3 w-24 h-24 bg-purple-300/15 rounded-full blur-lg animate-ping"></div>
    </div>

    <div class="container mx-auto px-6 relative z-5">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-8 text-center lg:text-left">
                <div class="space-y-6">
                    <div class="inline-block px-4 py-2 bg-blue-400/20 rounded-full backdrop-blur-sm border border-blue-300/30">
                        <span class="text-blue-200 font-medium text-sm">🎉 Upcoming Events & Activities</span>
                    </div>

                    <h1 class="text-5xl lg:text-7xl font-black text-white leading-tight">
                        <span class="bg-gradient-to-r from-blue-300 to-purple-300 bg-clip-text text-transparent">
                            Our Events
                        </span>
                        <br>
                        <span class="text-white">& Activities</span>
                    </h1>

                    <p class="text-xl text-blue-100 max-w-2xl leading-relaxed">
                        Join us in our upcoming events and activities. Be part of the change and contribute to
                        building
                        a better society through
                        <span class="font-semibold text-blue-300">Abhivyakti Foundation</span>.
                    </p>
                </div>

                @*<div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                        <button onclick="window.location.href='index.html#donation-section'"
                                class="group px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-bold rounded-2xl border-2 border-white/30 hover:bg-white hover:text-purple-800 transform hover:scale-105 transition-all duration-300">
                            <span class="flex items-center justify-center gap-2">
                                💝 Donate Now
                                <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none"
                                     stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                            </span>
                        </button>
                    </div>*@
            </div>

            <div class="relative lg:justify-self-end">
                <div class="relative group">
                    <div class="absolute -inset-4 bg-gradient-to-r from-blue-400 to-purple-400 rounded-3xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-500">
                    </div>
                    <div class="absolute -inset-2 bg-gradient-to-r from-white/20 to-blue-200/20 rounded-2xl blur-sm">
                    </div>

                    <div class="relative overflow-hidden rounded-2xl shadow-2xl">
                        <img src="~/Images/aims-discription-2.jpg" alt="Events & Activities"
                             class="w-full h-[500px] object-cover transform transition-transform duration-700" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-white rounded-full mt-2 animate-pulse"></div>
        </div>
    </div>
</section>

<section class="py-20 bg-gradient-to-b from-gray-50 to-white" id="latest-events">
    <div class="max-w-7xl mx-auto px-6 relative z-5">
        <div class="flex flex-col items-center mb-2">

            <h2 class="text-4xl font-extrabold text-center bg-gradient-to-r from-purple-600 via-blue-500 to-indigo-400 bg-clip-text text-transparent drop-shadow-lg animate-fadeInUp">
                Upcoming Events
            </h2>
            <div class="w-24 h-1 mt-3 bg-gradient-to-r from-purple-400 to-blue-400 rounded-full animate-pulse">
            </div>
        </div>
        <div class="text-center mb-16 space-y-6">

            <p class="text-gray-600 text-lg max-w-2xl mx-auto">
                Join us in our upcoming events and be part of positive change in the community
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var ev in Model)
            {
                <a href="~/Site/EventDetails/@ev.Title"
                   class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden transform hover:-translate-y-2 border border-gray-100">
                    <div class="relative overflow-hidden">
                        <img src="@ev.ImageUrl" alt="@ev.Title"
                             class="w-full h-48 object-cover transform group-hover:scale-110 transition-transform duration-700" />
                        <div class="absolute top-4 left-4 bg-red-500 text-white px-3 py-1 rounded-full text-xs font-bold">
                            <i class="fas fa-calendar mr-1"></i>    @(ev.EventDate?.ToString("dd MMMM yyyy", System.Globalization.CultureInfo.InvariantCulture))

                        </div>
                    </div>
                    <div class="p-6 space-y-4">
                        <h3 class="text-lg font-bold text-gray-900 group-hover:text-purple-600 transition-colors duration-300 line-clamp-2">
                            @ev.Title
                        </h3>
                        <p class="text-gray-600 text-sm line-clamp-2">
                            @Html.Raw(ev.Descriptions)
                        </p>
                        <p>Read More ...</p>
                        <!--<div class="flex items-center justify-between pt-4 border-t border-gray-100">-->
                           
                            @*<div class="flex items-center gap-1 text-gray-400">
                                <i class="fas fa-clock text-purple-500"></i>
                                <span class="text-xs">9:00 AM - 5:00 PM</span>
                            </div>*@
                        <!--</div>-->
                    </div>
                </a>
            }
        </div>
    </div>
</section>
           