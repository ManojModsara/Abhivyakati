@model QuizGame.Dto.ContactDto
@{
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}
<section class="py-8  px-2 md:py-12 md:px-4 bg-gray-50 py-16 ">
    <div class="container mx-auto">
        <!-- Modern Header with Green Gradient Text -->
        <div class="text-center mb-10 md:mb-10 mt-28">
            <h2 class="text-3xl md:text-5xl font-black bg-gradient-to-r from-green-600 via-lime-600 to-emerald-600 bg-clip-text text-transparent mb-2 md:mb-4 animate-pulse">
                Contact Us
            </h2>
            <div class="w-16 md:w-24 h-1 bg-gradient-to-r from-green-500 to-lime-500 mx-auto rounded-full"></div>
        </div>

        <!-- Contact Info Cards with Glassmorphism -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-8">
            <div class="group bg-white backdrop-blur-lg p-5 md:p-8 shadow-xl rounded-3xl border border-white/20 hover:shadow-2xl hover:scale-105 transition-all duration-300 hover:bg-green-100">
                <div class="flex items-center justify-center w-12 h-12 md:w-16 md:h-16 bg-gradient-to-br from-green-400 to-lime-500 rounded-2xl mb-4 md:mb-6 mx-auto shadow-lg group-hover:rotate-12 transition-transform duration-300">
                    <i class="fas fa-map-marker-alt text-white text-lg md:text-xl"></i>
                </div>
                <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-4 text-green-800 text-center">
                    REGISTERED OFFICE
                </h3>
                <div class="space-y-1 md:space-y-2 text-gray-600 text-center text-sm md:text-base">
                    <p>80/2 patel marg mansarovar</p>
                    <p>jaipur</p>
                    <p class="font-mono text-xs md:text-sm bg-green-100 px-2 py-1 rounded-full inline-block">
                        302020
                    </p>
                </div>
            </div>

            <div class="group bg-white backdrop-blur-lg p-5 md:p-8 shadow-xl rounded-3xl border border-white/20 hover:shadow-2xl hover:scale-105 transition-all duration-300 hover:bg-green-100">
                <div class="flex items-center justify-center w-12 h-12 md:w-16 md:h-16 bg-gradient-to-br from-lime-400 to-green-500 rounded-2xl mb-4 md:mb-6 mx-auto shadow-lg group-hover:rotate-12 transition-transform duration-300">
                    <i class="fas fa-building text-white text-lg md:text-xl"></i>
                </div>
                <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-4 text-green-800 text-center">OTHER OFFICES</h3>
                <div class="space-y-1 md:space-y-2 text-gray-600 text-center text-sm md:text-base">
                    <p>80/2 patel marg mansarovar</p>
                    <p>jaipur</p>
                    <p class="font-mono text-xs md:text-sm bg-green-100 px-2 py-1 rounded-full inline-block">
                        302020
                    </p>
                </div>
            </div>

            <div class="group bg-white backdrop-blur-lg p-5 md:p-8 shadow-xl rounded-3xl border border-white/20 hover:shadow-2xl hover:scale-105 transition-all duration-300 hover:bg-green-100">
                <div class="flex items-center justify-center w-12 h-12 md:w-16 md:h-16 bg-gradient-to-br from-emerald-400 to-green-500 rounded-2xl mb-4 md:mb-6 mx-auto shadow-lg group-hover:rotate-12 transition-transform duration-300">
                    <i class="fas fa-phone text-white text-lg md:text-xl"></i>
                </div>
                <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-4 text-green-800 text-center">CONTACT</h3>
                <div class="space-y-2 md:space-y-3 text-gray-600 text-center text-sm md:text-base">
                    <p class="flex items-center justify-center gap-2">
                        <i class="fas fa-phone-alt text-green-600"></i>
                        <span class="font-semibold">+91 1234567890</span>
                    </p>
                    <p class="flex items-center justify-center gap-2">
                        <i class="fas fa-envelope text-green-600"></i>
                        <a href="mailto:abhivyaktifoundation@gmail.com"
                           class="text-green-600 hover:text-green-800 hover:underline transition-colors font-semibold">
                            abhivyaktifoundation@gmail.com
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3559.6184295480125!2d75.76407977468143!3d26.85208607668328!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x396db5a3f95ea69d%3A0x51b6f4c50fe073b2!2sWard%2027%2C%2080%2F2%2C%20Patel%20Marg%2C%20Mansarovar%20Sector%209%2C%20Mansarovar%20Sector%208%2C%20Mansarovar%2C%20Jaipur%2C%20Rajasthan%20302020!5e0!3m2!1sen!2sin!4v1752424951259!5m2!1sen!2sin"
            class="w-full" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>
<section class="pb-5 px-2 md:pt-5 md:px-4 bg-white">
    <div class="container mx-auto">
        <!-- Main Contact Form Section -->
        <div class="pt-5 md:pt-5 grid grid-cols-1 lg:grid-cols-2 items-center gap-8 md:gap-16 relative pb-5 md:pb-5">

            <!-- Modern Form with Glassmorphism -->
            <div class="lg:w-full z-5 relative">
                <div class="bg-white/30 backdrop-blur-xl p-5 md:p-8 md:p-12 rounded-3xl shadow-2xl border border-white/20 hover:shadow-3xl transition-all duration-500">

                    <div class="mb-6 md:mb-8">
                        <h2 class="text-2xl md:text-4xl font-black bg-gradient-to-r from-green-600 to-lime-600 bg-clip-text text-transparent mb-1 md:mb-2">
                            Choose To Donate
                        </h2>
                        <p class="text-gray-600 text-base md:text-lg">
                            Please fill out the form below and we'll get back to you as soon as possible.
                        </p>
                    </div>

                    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
                        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">
                                    @Html.Partial("_Notification")
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>


                    @using (Html.BeginForm("Contact", "Site", FormMethod.Post, new { @class = "space-y-4 md:space-y-3 ajax-form", @id = "ContactForm" }))
                    {
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-3">


                            <div class="group relative">
                                @Html.TextBoxFor(a => a.Name, new { @placeholder = "Enter Name", @class = "w-full p-3 md:p-4 bg-white/50 backdrop-blur-sm border-2 border-gray-200 rounded-2xl focus:border-green-500 focus:ring-4 focus:ring-green-200 focus:bg-white/70 transition-all duration-300 placeholder-gray-500 text-gray-700 font-medium text-sm md:text-base", @required = "required" })
                                <div class="absolute inset-y-0 right-0 pr-3 md:pr-4 flex items-center pointer-events-none">
                                    <i class="fas fa-user text-gray-400 group-focus-within:text-green-500 transition-colors text-base md:text-lg"></i>
                                </div>
                                @Html.ValidationMessageFor(a => a.Name, "", new { @class = "text-red-500 text-xs md:text-sm mt-1 md:mt-2 error name-error font-medium" })
                            </div>

                            <div class="group relative">
                                @Html.TextBoxFor(a => a.MobileNumber, new { @placeholder = "Enter Mobile Number", @class = "w-full p-3 md:p-4 bg-white/50 backdrop-blur-sm border-2 border-gray-200 rounded-2xl focus:border-green-500 focus:ring-4 focus:ring-green-200 focus:bg-white/70 transition-all duration-300 placeholder-gray-500 text-gray-700 font-medium text-sm md:text-base", @required = "required" })
                                <div class="absolute inset-y-0 right-0 pr-3 md:pr-4 flex items-center pointer-events-none">
                                    <i class="fas fa-phone text-gray-400 group-focus-within:text-green-500 transition-colors text-base md:text-lg"></i>
                                </div>
                                @Html.ValidationMessageFor(a => a.MobileNumber, "", new { @class = "text-red-500 text-xs md:text-sm mt-1 md:mt-2 error mobile-error font-medium", maxlength = "10" })
                            </div>

                            <div class="group relative md:col-span-2">
                                @Html.TextAreaFor(a => a.Message, new { @placeholder = "Fill Message", @class = "w-full p-3 md:p-4 bg-white/50 backdrop-blur-sm border-2 border-gray-200 rounded-2xl focus:border-green-500 focus:ring-4 focus:ring-green-200 focus:bg-white/70 transition-all duration-300 placeholder-gray-500 text-gray-700 font-medium resize-none text-sm md:text-base" })
                                <div class="absolute top-3 md:top-4 right-3 md:right-4 pointer-events-none">
                                    <i class="fas fa-comment text-gray-400 group-focus-within:text-green-500 transition-colors text-base md:text-lg"></i>
                                </div>
                                @Html.ValidationMessageFor(a => a.Message, "", new { @class = "text-red-500 text-xs md:text-sm mt-1 md:mt-2 error description-error font-medium" })
                            </div>

                            <div class="text-right pt-2 md:pt-4 md:col-span-2">
                                <button type="submit"
                                        class="group relative px-6 md:px-8 py-3 md:py-4 bg-gradient-to-r from-green-500 to-lime-500 hover:from-green-600 hover:to-lime-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 overflow-hidden text-base md:text-lg">
                                    <span class="absolute inset-0 bg-gradient-to-r from-green-400 to-lime-400 opacity-0 group-hover:opacity-20 transition-opacity duration-300"></span>
                                    <span class="relative flex items-center gap-2 md:gap-3">
                                        <i class="fas fa-paper-plane group-hover:rotate-12 transition-transform duration-300"></i>
                                        <span>SUBMIT</span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Enhanced Image Section -->
            <div class="w-full h-full relative">
                <div class="relative px-2 md:px-4">
                    <div class="relative group">
                        <img src="https://vigyansarojcare.com/assets/images/from.png" alt="Contact Us Image"
                             class="relative w-full h-auto object-cover rounded-2xl shadow-2xl">
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<script>
    // Toast show karne ka function
    function showSuccessToast() {
        const toastEl = document.getElementById('successToast');
        const toast = new bootstrap.Toast(toastEl, { delay: 3000 }); // 3 sec me hide
        toast.show();
    }

    // Example trigger (page load hone ke 1 sec baad toast dikhega)
    window.onload = function () {
        setTimeout(showSuccessToast, 1000);
    }
</script>