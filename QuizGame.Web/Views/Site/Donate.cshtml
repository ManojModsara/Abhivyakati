
@{
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}

<!-- Hero Section -->
<section class="relative mt-24 py-10 flex items-center bg-gradient-to-br from-emerald-900 via-green-700 to-teal-400 overflow-hidden">
    <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-32 h-32 bg-white/10 rounded-full blur-xl animate-pulse"></div>
        <div class="absolute bottom-20 right-10 w-48 h-48 bg-green-400/20 rounded-full blur-2xl animate-bounce">
        </div>
        <div class="absolute top-1/2 left-1/3 w-24 h-24 bg-emerald-300/15 rounded-full blur-lg animate-ping"></div>
    </div>

    <div class="container mx-auto px-6 relative z-5">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-8 text-center lg:text-left">
                <div class="space-y-6">
                    <div class="inline-block px-4 py-2 bg-green-400/20 rounded-full backdrop-blur-sm border border-green-300/30">
                        <span class="text-green-200 font-medium text-sm">💝 Support Our Mission</span>
                    </div>

                    <h1 class="text-5xl lg:text-7xl font-black text-white leading-tight">
                        <span class="bg-gradient-to-r from-green-300 to-emerald-300 bg-clip-text text-transparent">
                            Make A
                        </span>
                        <br>
                        <span class="text-white">Difference</span>
                    </h1>

                    <p class="text-xl text-green-100 max-w-2xl leading-relaxed">
                        Your donation will help educate 2 children for 1 year and support our community development
                        initiatives through
                        <span class="font-semibold text-green-300">Abhivyakti Foundation</span>.
                    </p>
                </div>
            </div>

            <div class="relative lg:justify-self-end">
                <div class="relative group">
                    <div class="absolute -inset-4 bg-gradient-to-r from-green-400 to-emerald-400 rounded-3xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-500">
                    </div>
                    <div class="absolute -inset-2 bg-gradient-to-r from-white/20 to-green-200/20 rounded-2xl blur-sm">
                    </div>
                    <div class="relative overflow-hidden rounded-2xl shadow-2xl">
                        <img src="~/Images/aims-discription-2.jpg" alt="Donation Impact"
                             class="w-full h-[500px] object-cover transform transition-transform duration-700" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Donation Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="bg-white rounded-3xl shadow-xl border-4 border-emerald-200 p-6 lg:p-12">
            <!-- Header -->
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-5xl font-extrabold text-emerald-800 mb-3">Support The Cause</h2>
                <p class="text-xl md:text-3xl font-semibold text-emerald-600 mb-2">Make A Difference</p>
                <p class="text-md md:text-lg text-gray-600">
                    Your donation will help educate 2 children for 1 year
                </p>
            </div>

            <div class="w-full mx-auto md:px-24 px-0">
                <h3 class="text-2xl font-bold text-gray-800 mb-3">Scan & Pay</h3>
                <p class="text-gray-600 mb-6">Use any UPI app to scan the QR code and pay instantly.</p>
            </div>

            <!-- QR and Payment Options -->
            <div class="flex flex-col md:flex-row justify-center items-center gap-0">
                <!-- Left: QR Code -->
                <div class="w-full md:w-1/2 flex justify-center">
                    <div class="p-4 bg-gray-100 rounded-2xl border-4 border-gray-300">
                        <img src="~/Images/qr.png" alt="Scan QR Code" class="w-64 h-64 object-contain" />
                    </div>
                </div>

                <!-- Right: Payment Info -->
                <div class="w-full md:w-1/1 text-center md:text-left">
                    <!-- Bank Detail Cards -->
                    <div class="flex flex-wrap justify-center md:justify-start items-center gap-6">

                        @{ Html.RenderAction("GetBanks", "BankAccount"); }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>