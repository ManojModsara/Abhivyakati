@model List<QuizGame.Dto.AddEditBankAccountDto>


@foreach (var item in Model)
{
    <div class="group hover:scale-105 transition-transform bg-gradient-to-br from-blue-600 to-blue-800 rounded-2xl p-6 shadow-xl text-white w-96 relative overflow-hidden">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-4 right-4 w-8 h-8 border-2 border-white rounded-full">
            </div>
            <div class="absolute top-4 right-8 w-8 h-8 border-2 border-white rounded-full">
            </div>
        </div>
        <div class="relative z-10 space-y-3">
            <div class="text-center mb-4">
                <div class="text-lg font-bold tracking-wider">BANK DETAILS</div>
                <div class="text-sm opacity-80">For Direct Transfer</div>
            </div>
            <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-200">Bank Name:</span>
                    <span class="font-semibold">@item.BankName</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-200">AccountHolderName:</span>
                    <span class="font-semibold text-xs">@item.AccountHolderName</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-200">Account Number:</span>
                    <span class="font-mono font-semibold">@item.AccountNumber</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-200">Upi Address:</span>
                    <span class="font-semibold">@item.UpiAddress</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-200">IFSC Code:</span>
                    <span class="font-mono font-semibold">@item.IFSCCode</span>
                </div>
            </div>
            </div>
            </div>
            }



